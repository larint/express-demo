extends layout

block content
    form.col-12.col-md-6.col-lg-4.mx-auto(action='', method='POST')
        .inputFields
            .center 
                h1 Nhập thông tin
            .form-group
                label(for='email' class="label") Email
                input#email.form-control(type='text', name='email', placeholder='abc@gmail.com' value="admin@gmail.com")
            .form-group
                label(for='password') Mật khẩu
                input#password.form-control(type='password', name='password', placeholder='*******', value="123456")
            p.red=error
            .center
                button.btn.btn-primary.mx-auto(type='submit') Đăng nhập

